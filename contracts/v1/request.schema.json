{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lode.local/contracts/v1/request.schema.json",
  "title": "LodeRequest",
  "description": "Request from Rust CLI to Python research runner",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "v1",
      "description": "Contract version"
    },
    "run_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this research run"
    },
    "query": {
      "type": "string",
      "minLength": 1,
      "description": "The research query to investigate"
    },
    "config": {
      "type": "object",
      "description": "Runtime configuration from CLI",
      "properties": {
        "model": {
          "type": "string",
          "description": "OpenAI model to use"
        },
        "search_count": {
          "type": "integer",
          "minimum": 1,
          "description": "Initial number of web searches to plan"
        },
        "max_iterations": {
          "type": "integer",
          "minimum": 1,
          "default": 10,
          "description": "Maximum orchestrator reasoning loops"
        },
        "max_searches": {
          "type": "integer",
          "minimum": 1,
          "default": 15,
          "description": "Maximum total searches allowed"
        },
        "auto_decide": {
          "type": "boolean",
          "default": true,
          "description": "Whether agent can proceed without user confirmation"
        }
      },
      "required": ["model", "search_count"],
      "additionalProperties": false
    }
  },
  "required": ["version", "run_id", "query", "config"],
  "additionalProperties": false
}

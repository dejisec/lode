{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lode.local/contracts/v1/response.schema.json",
  "title": "LodeResponse",
  "description": "Streaming JSON lines from Python runner to Rust CLI",
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "type": { "const": "status" },
        "message": { "type": "string" }
      },
      "required": ["type", "message"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "trace" },
        "trace_id": { "type": "string" },
        "trace_url": { "type": "string", "format": "uri" }
      },
      "required": ["type", "trace_id", "trace_url"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "prompt" },
        "agent": { "type": "string" },
        "sequence": { "type": "integer", "minimum": 1 },
        "content": { "type": "string" }
      },
      "required": ["type", "agent", "sequence", "content"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "raw_response" },
        "agent": { "type": "string" },
        "sequence": { "type": "integer", "minimum": 1 },
        "content": { "type": "string" },
        "token_usage": {
          "type": "object",
          "properties": {
            "prompt_tokens": { "type": "integer" },
            "completion_tokens": { "type": "integer" },
            "total_tokens": { "type": "integer" }
          },
          "required": ["prompt_tokens", "completion_tokens", "total_tokens"],
          "additionalProperties": false
        }
      },
      "required": ["type", "agent", "sequence", "content"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "clarifying_questions" },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "question": { "type": "string" }
            },
            "required": ["label", "question"],
            "additionalProperties": false
          }
        }
      },
      "required": ["type", "questions"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "description": "Emitted when the orchestrator makes a decision",
      "properties": {
        "type": { "const": "decision" },
        "action": {
          "type": "string",
          "enum": ["start", "search_more", "evaluate", "write", "complete"],
          "description": "The action the orchestrator is taking"
        },
        "reason": {
          "type": "string",
          "description": "Explanation of why this action was chosen"
        },
        "remaining_searches": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of searches remaining in budget"
        },
        "remaining_iterations": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of iterations remaining in budget"
        }
      },
      "required": ["type", "action", "reason", "remaining_searches", "remaining_iterations"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "report" },
        "short_summary": { "type": "string" },
        "markdown_report": { "type": "string" },
        "follow_up_questions": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["type", "short_summary", "markdown_report", "follow_up_questions"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "metadata" },
        "model": { "type": "string" },
        "total_tokens": { "type": "integer" },
        "duration_ms": { "type": "integer" }
      },
      "required": ["type", "model", "duration_ms"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "error" },
        "message": { "type": "string" },
        "code": { "type": "string" }
      },
      "required": ["type", "message"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "type": { "const": "done" },
        "success": { "type": "boolean" }
      },
      "required": ["type", "success"],
      "additionalProperties": false
    }
  ]
}
